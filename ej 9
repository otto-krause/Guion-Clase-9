#include <stdio.h>
#include <stdlib.h>


int main(int argc, char *argv[]) {
int salcr=0,masprom=0,menprom=0,i=0;
while(20>i){
  printf("Ingrese su salario correspondiente ");
  scanf("%d",&salcr);
        if (salcr<20000){
          menprom=menprom+1;
          } 	else  {
              masprom=masprom+1;
            }
  i=i+1;
  }
  printf("\n El total de personas que ganan mas del salario promedio son %d ",masprom);
  printf("\n El total de personas que ganan menos del salario promedio son %d ",menprom);
return 0;
}
