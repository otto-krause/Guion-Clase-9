#include <stdio.h>
#include <stdlib.h>

int main()
{
	int z=0,i=1,acu=0,vvd,tv,vjr,mjvr;

	while(21>i){
		while (15>z){
			printf("\nIngrese las ventas del vendedor %d ",i);
			scanf("%d",&vvd);
			acu=acu+vvd;
			z=z+1;
			}
		printf("\n El vendio un total de %d unidades ",acu);
					if (acu>vjr){
							vjr=acu;
							mjvr=i;
								}
		tv=tv+acu;
		z=0;
		acu=0;
		i=i+1;
		}

	printf("\n El total de ventas fue %d",tv);
	printf("\n El mejor vendedor fue el vendedor numero %d con un total de %d ventas ",mjvr,vjr);

}
