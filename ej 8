#include <stdio.h>
#include <stdlib.h>


int main(int argc, char *argv[]) {
	int n=0,npos=0,nneg=0,zr=0,i=0;
	while(10>i){
		printf("Ingrese un numero ");
		scanf("%d",&n);
					if (n>0){
						npos=npos+1;
						} 	else if(n<0) {
								nneg=nneg+1;
							} else {
								zr=zr+1;
							}
		i=i+1;
		}
		printf("\n El total de numeros positivos es %d ",npos);
		printf("\n El total de numeros negativos es %d ",nneg);
		printf("\n El numero total de ceros es %d ",zr);
	return 0;
}
